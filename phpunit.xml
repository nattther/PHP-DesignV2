<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         cacheDirectory=".phpunit.cache"
         failOnWarning="true"
         failOnRisky="true"
>
  <testsuites>
    <testsuite name="Unit">
      <directory>Tests</directory>
    </testsuite>
  </testsuites>

  <source>
    <include>
      <directory suffix=".php">Src</directory>
    </include>
  </source>
</phpunit>
