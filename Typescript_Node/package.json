{
  "name": "typescript_node",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:js": "node build.mjs --mode=dev",
    "build:js:min": "node build.mjs --mode=prod",
    "watch:js": "node build.mjs --watch --mode=dev",
    "watch:tailwind": "npx tailwindcss -i ../assets/css/input.css -o ../assets/css/output.css --watch --minify",
    "build:tailwind": "npx tailwindcss -i ../assets/css/input.css -o ../assets/css/output.css --minify",
    "build:all": "npm run build:js && npm run build:tailwind",
    "build:prod": "npm run build:js:min && npm run build:tailwind"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.2"
  }
}
